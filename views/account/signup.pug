extends ../layout

block content
  .pb-2.mt-2.mb-4.border-bottom
    h3 新規登録
  form(id='signup-form', method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-right(for='email') メールアドレス
      .col-md-7
        input.form-control(type='email', name='email', id='email', placeholder='メールアドレス入力', autofocus, autocomplete='email', required)
    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-right(for='password') パスワード
      .col-md-7
        input.form-control(type='password', name='password', id='password', placeholder='パスワード入力', autocomplete='new-password', required)
    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-right(for='confirmPassword') パスワード確認
      .col-md-7
        input.form-control(type='password', name='confirmPassword', id='confirmPassword', placeholder='パスワード再入力', autocomplete='new-password', required)
    .form-group.offset-sm-3.col-md-7.pl-2
      button.btn.btn-success(type='submit')
        i.fas.fa-user-plus.fa-sm
        | 登録
