extends ../layout

block content
  .pb-2.mt-2.mb-4.border-bottom
    h3 ログイン
  form(method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-right(for='email') メールアドレス
      .col-md-7
        input.form-control(type='email', name='email', id='email', placeholder='メールアドレス入力', autofocus, autocomplete='email', required)
    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-right(for='password') パスワード
      .col-md-7
        input.form-control(type='password', name='password', id='password', placeholder='パスワード入力', autocomplete='current-password', required)
    .form-group
      .offset-sm-3.col-md-7.pl-2
        button.col-md-3.btn.btn-primary(type='submit')
          i.far.fa-user.fa-sm
          | ログイン
        a.btn.btn-link(href='/forgot') パスワードをお忘れの方はこちら
    .form-group
      .offset-sm-3.col-md-7.pl-2
        hr
    .form-group
      .offset-sm-3.col-md-7.pl-2
        a.btn.btn-block.btn-facebook.btn-social(href='/auth/facebook')
          i.fab.fa-facebook-f.fa-sm
          | Facebookでログイン
        a.btn.btn-block.btn-twitter.btn-social(href='/auth/twitter')
          i.fab.fa-twitter.fa-sm
          | Twitterでログイン
        a.btn.btn-block.btn-instagram.btn-social(href='/auth/instagram')
          i.fab.fa-instagram.fa-sm
          | Sign in with Instagram
        a.btn.btn-block.btn-github.btn-social(href='/auth/github')
          i.fab.fa-github.fa-sm
          | Sign in with GitHub
