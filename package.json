  "scripts": {
    "start": "node dist/server.js",
    "start-prod": "yarn copy && yarn build-prod && node dist/server.js",
    "build-prod": "yarn build-sass && yarn build-webpack-prod && yarn copy-static-assets",
    "start-dev": "yarn copy && yarn build-dev && node dist/server.js",
    "build-dev": "yarn build-sass && yarn build-webpack-dev && yarn copy-static-assets",
    "build-sass": "node-sass src/public/css/main.scss dist/public/css/main.css",
    "build-webpack-prod": "webpack --config webpack.config.prod.js",
    "build-webpack-dev": "webpack --config webpack.config.dev.js",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "copy": "ts-node copyScss.ts",
    "watch": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"yarn watch-sass\" \"yarn watch-webpack\" \"yarn watch-node\"",
    "watch-sass": "node-sass -w src/public/css/main.scss dist/public/css/main.css",
    "watch-webpack": "webpack --config webpack.config.dev.js --watch",
    "watch-node": "nodemon dist/server.js",
    "tslint": "tslint -c tslint.json -p tsconfig.json"
  },
  "engines": {
    "node": "10.15.0"
  },
